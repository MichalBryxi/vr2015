<section id="handovers" class="space-top">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Etapy</h2>
        <h3 class="section-subheading text-muted">Popis jednotlivých částí trasy</h3>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <ul class="timeline">
          {{#each handoversSorted as |handover|}}
            {{handover-item handover=handover showEdit=true}}
          {{/each}}
        </ul>
      </div>
    </div>

    <hr />

    <div class="row">
      <div class="col-lg-12 text-center">
        {{#link-to 'handovers.new' class="btn btn-success"}}
          Přidat etapu
        {{/link-to}}
        {{liquid-outlet}}
      </div>
    </div>

  </div>
</section>
