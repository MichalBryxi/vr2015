<section id="team" class="space-top">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Náš úžasný tým</h2>
        <h3 class="section-subheading text-muted">Lidi, bez kterých by to nešlo</h3>
      </div>
    </div>

    <div class="row">
      {{#each attrs.runners as |runner|}}
        <div class="col-sm-3">
          {{runner-item runner=runner showEdit=true}}
        </div>
      {{/each}}

      <div class="col-sm-3">
        <button class="btn btn-default" {{action "addRunner"}}>
          {{fa-icon "plus"}}
          Přidat člena týmu
        </button>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 text-center">
        <p class="large text-muted">Děkujeme všem za úžasnou atmosféru a podporu.</p>
      </div>
    </div>
  </div>
</section>
